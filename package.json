{
  "name": "headliner",
  "version": "3.9.0",
  "description": "Headliner is an OOCSS tool",
  "main": "css/headliner.min.css",
  "scripts": {
    "server": "browser-sync start --server --files './*, css/*.css'",
    "sass": "node-sass --output-style expanded source/headliner.scss css/headliner.css",
    "prefix": "postcss -u autoprefixer --autoprefixer.browsers 'last 7 versions' -r css/headliner.css",
    "cmq": "mqpacker css/headliner.css css/headliner.css",
    "minify:css": "cleancss -o css/headliner.min.css css/headliner.css",
    "build:css": "npm run sass && npm run prefix && npm run cmq && npm run minify:css",
    "watch:css": "onchange 'source/*.scss' -- npm run build:css",
    "watch:all": "parallelshell 'npm run server' 'npm run watch:css'",
    "postinstall": "npm run watch:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/franciscogo/headliner.git"
  },
  "keywords": [
    "css",
    "oocss"
  ],
  "author": "Francisco A. Gonzalez O.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/franciscogo/headliner/issues"
  },
  "homepage": "https://github.com/franciscogo/headliner#readme",
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "browser-sync": "^2.17.0",
    "clean-css": "^3.4.20",
    "css-mqpacker": "^5.0.1",
    "node-sass": "^3.10.1",
    "onchange": "^3.0.2",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.6.0"
  }
}
